\ProvidesPackage{styles}
%--------------------
%chapter style
\pagestyle{ruled}
\chapterstyle{bringhurst}
\renewcommand\printchapternum{\large \thechapter.~\scshape}
\setlength{\parindent}{.75em}
\setlength{\parskip}{1.5em}
%section style
\setsecheadstyle{\centering \bfseries}
\setbeforesecskip{2em}
\setaftersecskip{1em}
%subsection style
\newcommand{\subsec}[1]{\subsection{#1}:\parindent}
\setsubsecheadstyle{\itshape}
\setaftersubsecskip{0pt}
\setbeforesubsecskip{3em}
\setsecnumdepth{subsection}
%----
%end of lecture
\newcounter{lecture}
\addtocounter{lecture}{1}
\setbeforesubsubsecskip{1em}
\setaftersubsubsecskip{.5em}
\setsubsubsecheadstyle{\small \normalfont}
\usepackage[yyyymmdd,hhmmss]{datetime}
\renewcommand{\dateseparator}{-}
\def\dotfill#1{\cleaders\hbox to #1{.}\hfill}
\makeatletter
\def\myrulefill{\leavevmode\leaders\hrule height .7ex width 1ex depth -0.6ex\hfill\kern\z@}
\makeatother
\newcommand{\lec}{\subsubsection{\noindent\myrulefill~\fbox{End of Lecture \arabic{lecture}}~\myrulefill}\stepcounter{lecture}}
